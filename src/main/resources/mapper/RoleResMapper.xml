<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.metoo.monitor.core.mapper.RoleResMapper">

    <insert id="insert" parameterType="com.metoo.monitor.core.entity.RoleRes" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO  metoo_role_res
        (role_id, res_id)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.role_id}, #{item.res_id})
        </foreach>
    </insert>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE mrr FROM metoo_role_res mrr
        WHERE mrr.role_id = #{id, jdbcType=BIGINT}
    </delete>

</mapper>